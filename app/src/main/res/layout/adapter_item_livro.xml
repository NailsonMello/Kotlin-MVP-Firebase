<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_livro"
            android:background="#45000000"
            android:padding="4dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/catalogo"/>
        <TextView
            android:id="@+id/livroNomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_livro"
            android:text="Name"
            android:textSize="18sp"
            android:maxLines="1"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/livroNomeText"
            android:layout_toRightOf="@+id/img_livro"
            android:text="Preço"
            android:textSize="12sp"
            android:textColor="#999999"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView1"
            android:layout_toRightOf="@+id/img_livro"
            android:text="Descrição"
            android:textSize="12sp"
            android:textColor="#999999"/>

        <TextView
            android:id="@+id/livroPrecoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_above="@id/livroDescricaoText"
            android:layout_alignStart="@+id/livroDescricaoText"
            android:textSize="12sp"
            android:textColor="#999999"/>

        <TextView
            android:id="@+id/livroDescricaoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/textView2"
            android:layout_alignTop="@+id/textView2"
            android:layout_marginStart="10dp"
            android:text=":"
            android:maxLines="1"
            android:textSize="12sp"
            android:textColor="#999999"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>